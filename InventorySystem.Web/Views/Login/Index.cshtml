@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <form method="post" class="card shadow p-4" style="max-width:360px;margin:10vh auto;">
        <h4 class="mb-3 text-center">Iniciar sesión</h4>
        <input name="username" class="form-control mb-2" placeholder="Usuario (ej. JER01)" />
        <input name="password" type="password" class="form-control mb-3" placeholder="Contraseña" />
        <button class="btn btn-primary w-100">Entrar</button>
        <div class="text-danger mt-3">@Html.ValidationSummary()</div>
    </form>
</body>
</html>
