@{
    ViewData["Title"] = "Cambiar contraseña";
}
<div class="container" style="max-width:520px;">
    <h3 class="mt-5 mb-3">Cambiar contraseña</h3>
    <form method="post">
        <label>Contraseña actual</label>
        <input name="currentPassword" type="password" class="form-control mb-2" />
        <label>Nueva contraseña</label>
        <input name="newPassword" type="password" class="form-control mb-2" />
        <small class="text-muted">Mín. 10 caracteres, con mayúscula, minúscula, número y símbolo.</small>
        <label class="mt-3">Confirmar contraseña</label>
        <input name="confirmPassword" type="password" class="form-control mb-3" />
        <button class="btn btn-success">Guardar</button>
        <div class="text-danger mt-3">@Html.ValidationSummary()</div>
        @if (TempData["ok"] is string ok) { <div class="alert alert-success mt-3">@ok</div> }
    </form>
</div>
