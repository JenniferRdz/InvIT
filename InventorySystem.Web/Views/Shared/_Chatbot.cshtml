@* Views/Shared/_Chatbot.cshtml *@
<div id="chatbot-toggle" class="chatbot-button">
</div>

<div id="chatbot-window" class="chatbot-window hidden">
    <div class="chatbot-header">
        <span>Chat IT – Real Alloy</span>
        <button id="chatbot-close" type="button">×</button>
    </div>

    <div id="chatbot-messages" class="chatbot-messages">
        <div class="chatbot-message bot">
            Hola, Soy tu asistente de soporte IT. Cuéntame el problema que tienes con tu equipo de la empresa.
        </div>
    </div>

    <form id="chatbot-form" class="chatbot-form">
        <input id="chatbot-input"
               type="text"
               placeholder="Escribe tu pregunta..." />
        <button type="submit">Enviar</button>
    </form>
</div>
