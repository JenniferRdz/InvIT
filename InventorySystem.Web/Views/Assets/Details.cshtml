@model InventorySystem.Web.Data.Entities.Asset

@{
    ViewData["Title"] = "Detalles del equipo";
}

<div class="container mt-4">
    <h3 class="mb-3">Detalles del equipo</h3>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Tag</dt>
                <dd class="col-sm-9">@Model.AssetTag</dd>

                <dt class="col-sm-3">Tipo</dt>
                <dd class="col-sm-9">@Model.AssetType?.Name</dd>

                <dt class="col-sm-3">Marca</dt>
                <dd class="col-sm-9">@Model.Brand?.Name</dd>

                <dt class="col-sm-3">Modelo</dt>
                <dd class="col-sm-9">
                    @(Model.Model != null ? Model.Model.Name : Model.ModelText)
                </dd>

                <dt class="col-sm-3">Número de serie</dt>
                <dd class="col-sm-9">@Model.SerialNumber</dd>

                <dt class="col-sm-3">Ubicación</dt>
                <dd class="col-sm-9">@Model.Location?.Name</dd>

                <dt class="col-sm-3">Responsable</dt>
                <dd class="col-sm-9">@Model.Assignee</dd>

                <dt class="col-sm-3">Estado Windows 11</dt>
                <dd class="col-sm-9">@Model.Win11Status?.Name</dd>

                <dt class="col-sm-3">Estado del equipo</dt>
                <dd class="col-sm-9">@Model.EqStatus?.Name</dd>

                <dt class="col-sm-3">Comentarios</dt>
                <dd class="col-sm-9">@Model.Comments</dd>

                <dt class="col-sm-3">Fecha de alta</dt>
                <dd class="col-sm-9">@Model.CreatedAt</dd>

                <dt class="col-sm-3">Última actualización</dt>
                <dd class="col-sm-9">@Model.UpdatedAt</dd>

                <dt class="col-sm-3">Fecha de baja</dt>
                <dd class="col-sm-9">
                    @(Model.DecommissionDate.HasValue ? Model.DecommissionDate.Value.ToString("yyyy-MM-dd") : "-")
                </dd>

                <dt class="col-sm-3">Motivo de baja</dt>
                <dd class="col-sm-9">@Model.DecommissionReason?.Name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>

        @* Acciones rápidas desde detalles *@
        <a asp-action="Edit" asp-route-id="@Model.AssetId" class="btn btn-primary">
            Editar
        </a>
        <a asp-action="Decommission" asp-route-id="@Model.AssetId" class="btn btn-danger">
            Dar de baja
        </a>
    </div>
</div>
