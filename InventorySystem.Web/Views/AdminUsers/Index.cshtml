@model IEnumerable<InventorySystem.Web.Data.Entities.AppUser>
    @{
    ViewData["Title"] = "Usuarios";
    var q = (string?)ViewBag.Q ?? "";
    var role = (string?)ViewBag.Role ?? "ALL";
    var state = (string?)ViewBag.State ?? "ALL";

    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.Total ?? 0);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);

    string BuildUrl(int p) => Url.Action("Index", new { q, role, state, page = p, pageSize }) ?? "#";
    }

    <div class="container mt-4">
        <h3 class="mb-3">Usuarios</h3>

        @if (TempData["ok"] is string ok) {
        <div class="alert alert-success">@ok</div>
    }

        <form method="get" class="row g-2 mb-3">
            <input type="hidden" name="page" value="1" />
            <div class="col-md-4">
                <input name="q" value="@q" class="form-control" placeholder="Buscar por nombre o email" />
            </div>
            <div class="col-md-3">
                <select name="role" class="form-select">
                    <option value="ALL" selected="@(role=="ALL")">Rol: Todos</option>
                    <option value="ADMIN" selected="@(role=="ADMIN")">ADMIN</option>
                    <option value="USER" selected="@(role=="USER")">USER</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="state" class="form-select">
                    <option value="ALL" selected="@(state=="ALL")">Estado: Todos</option>
                    <option value="ACTIVE" selected="@(state=="ACTIVE")">Activos</option>
                    <option value="INACTIVE" selected="@(state=="INACTIVE")">Inactivos</option>
                </select>
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary">Filtrar</button>
            </div>
        </form>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a class="btn btn-success" href="/AdminUsers/Create">+ Nuevo usuario</a>

            <form method="get" class="d-flex align-items-center gap-2">
                <input type="hidden" name="q" value="@q" />
                <input type="hidden" name="role" value="@role" />
                <input type="hidden" name="state" value="@state" />
                <input type="hidden" name="page" value="1" />
                <label class="text-muted">Tamaño:</label>
                <select name="pageSize" class="form-select form-select-sm" style="width:100px" onchange="this.form.submit()">
                    <option value="10" selected="@(pageSize==10)">10</option>
                    <option value="20" selected="@(pageSize==20)">20</option>
                    <option value="50" selected="@(pageSize==50)">50</option>
                    <option value="100" selected="@(pageSize==100)">100</option>
                </select>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email / Usuario</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th style="width:260px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Name</td>
                        <td>@(string.IsNullOrWhiteSpace(u.Email) ? u.Name : u.Email)</td>
                        <td><span class="badge bg-secondary">@u.Role</span></td>
                        <td>
                            @if (u.Active) { <span class="badge bg-success">Activo</span> }
                            else { <span class="badge bg-danger">Inactivo</span> }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-primary" href="/AdminUsers/Edit/@u.UserId">Editar</a>

                                <form method="post" action="/AdminUsers/ToggleActive/@u.UserId" class="ms-2">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm @(u.Active ? "btn-outline-warning" : "btn-outline-success")">
                                        @(u.Active ? "Desactivar" : "Activar")
                                    </button>
                                </form>

                                <form method="post" action="/AdminUsers/ResetPassword/@u.UserId" class="ms-2"
                                      onsubmit="return confirm('¿Resetear contraseña temporal?')">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger">Reset Pass</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <nav aria-label="Paginación">
            <ul class="pagination justify-content-center">
                <li class="page-item @(page<=1 ? "disabled" : "")">
                    <a class="page-link" href="@BuildUrl(page-1)">Anterior</a>
                </li>

                @{
                var from = Math.Max(1, page - 2);
                var to = Math.Min(totalPages, page + 2);
                for (int p = from; p <= to; p++)
                {
                    <li class="page-item @(p==page ? "active" : "")">
                        <a class="page-link" href="@BuildUrl(p)">@p</a>
                    </li>
                }
                }

                <li class="page-item @(page>=totalPages ? "disabled" : "")">
                    <a class="page-link" href="@BuildUrl(page+1)">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
