@model InventorySystem.Web.Models.ProgramarMantenimientoVM
@{
    ViewData["Title"] = "Programar mantenimiento";
}

<h2 class="mb-2">Programar mantenimiento</h2>
<p class="text-muted">Equipo: <strong>@Model.AssetTag</strong> (@Model.Modelo)</p>

<div class="card">
    <div class="card-body">
        <form asp-action="ScheduleMaintenance" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="AssetId" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row g-3">
                <div class="col-md-3">
                    <label asp-for="Date" class="form-label">Fecha</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Tipo" class="form-label">Tipo</label>
                    <select asp-for="Tipo" class="form-select" id="tipoSel">
                        <option value="Preventivo">Preventivo (con plan)</option>
                        <option value="Correctivo">Correctivo (solo historial)</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="col-md-3" id="freqBox">
                    <label asp-for="FrecuenciaMeses" class="form-label">Frecuencia</label>
                    <select asp-for="FrecuenciaMeses" class="form-select">
                        <option value="3">Cada 3 meses</option>
                        <option value="6">Cada 6 meses</option>
                    </select>
                    <span asp-validation-for="FrecuenciaMeses" class="text-danger"></span>
                </div>

                <div class="col-md-3" id="mtypeBox">
                    <label asp-for="MtypeId" class="form-label">Tipo de mantenimiento</label>
                    <select asp-for="MtypeId" asp-items="Model.Types" class="form-select">
                        <option value="0">-- Selecciona --</option>
                    </select>
                    <span asp-validation-for="MtypeId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Notes" class="form-label">Notas</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleBoxes() {
            const tipo = document.getElementById("tipoSel").value;
            const freqBox = document.getElementById("freqBox");
            const mtypeBox = document.getElementById("mtypeBox");

            if (tipo === "Preventivo") {
                freqBox.style.display = "";
                mtypeBox.style.display = "none";
            } else {
                freqBox.style.display = "none";
                mtypeBox.style.display = "";
            }
        }
        document.getElementById("tipoSel").addEventListener("change", toggleBoxes);
        toggleBoxes();
    </script>
}